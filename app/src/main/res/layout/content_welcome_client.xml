<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="unice.mbds.org.tpresto.WelcomeClientActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CHEZ TPRESTO"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="95dp"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:singleLine="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonProducts"
        android:src="@drawable/images"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#19bcd5" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liste Serveurs"
        android:id="@+id/buttonListUsers"
        android:background="@drawable/btn_connect_bg"
        android:textColor="#19bcd5"
        android:layout_below="@+id/buttonMenuTpresto"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#19bcd5" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDONNER MENU"
        android:id="@+id/buttonMenuTpresto"
        android:background="@drawable/btn_connect_bg"
        android:textColor="#19bcd5"
        android:layout_below="@+id/imageButtonProducts"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#19bcd5" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liste Commandes"
        android:id="@+id/buttonListCommandes"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_connect_bg"
        android:textColor="#19bcd5"
        android:layout_below="@+id/buttonListUsers"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#19bcd5" />

</RelativeLayout>
