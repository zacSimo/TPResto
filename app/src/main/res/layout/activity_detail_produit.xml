<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="unice.mbds.org.tpresto.DetailProduitActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/menu_name_detail"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#8c179f" />
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/menu_name_detail"
        android:background="@android:color/black" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageMenu_detail"
        android:layout_below="@+id/view_line"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description menu"
        android:id="@+id/menu_description_detail"
        android:layout_below="@+id/imageMenu_detail"
        android:layout_marginTop="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prix: "
        android:id="@+id/menu_price_detail"
        android:layout_below="@+id/menu_description_detail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:layout_marginRight="40dp"
        android:textColor="#f58c0b"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories: "
        android:id="@+id/menu_calories_detail"
        android:layout_below="@+id/menu_description_detail"
        android:layout_toEndOf="@+id/menu_price_detail"
        android:layout_marginTop="39dp"
        android:layout_marginRight="40dp"
        android:textColor="#f58c0b"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dessert"
        android:id="@+id/menu_dessert_detail"
        android:layout_below="@+id/menu_description_detail"
        android:layout_toEndOf="@+id/menu_calories_detail"
        android:layout_marginTop="39dp"
        android:layout_marginRight="40dp"
        android:textColor="#f58c0b"
        android:textSize="18dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount"
        android:id="@+id/menu_discount_detail"
        android:layout_below="@+id/menu_description_detail"
        android:layout_toEndOf="@+id/menu_dessert_detail"
        android:layout_marginTop="39dp"
        android:textColor="#f58c0b"
        android:textSize="18dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour"
        android:id="@+id/retour_detail"
        android:layout_below="@+id/menu_name_detail"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_commande_prod"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date Creation : "
        android:id="@+id/date_creation_produit"
        android:layout_below="@id/menu_discount_detail"
        android:textColor="@color/text_menu"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date MAJ : "
        android:id="@+id/date_maj_produit"
        android:layout_below="@+id/date_creation_produit"
        android:textColor="@color/text_menu"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
