<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_elements_commande"
    tools:context="unice.mbds.org.tpresto.ElementsCommandeActivity"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="annuler"
        android:id="@+id/annuler_commande"
        android:background="@drawable/btn_commande_prod"
        android:layout_gravity="center_horizontal" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:id="@+id/listViewCommandes"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/annuler_commande" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="envoyer"
        android:id="@+id/envoyer_commande"
        android:background="@drawable/btn_commande_prod"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/listViewCommandes" />

</RelativeLayout>