<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/buzz_bg" />
            <stroke android:width="@dimen/bt_stroke"
                android:color="@color/white" />
            <padding android:left="@dimen/one_step" android:top="@dimen/one_step" android:right="@dimen/one_step" android:bottom="@dimen/one_step" />
            <size android:height="@dimen/five_step" android:width="@dimen/five_step" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#00FF00"
                android:endColor="#00FF00"/>

            <stroke android:width="@dimen/bt_stroke_big" android:color="@color/white" />
            <!--<solid android:color="@color/buzz_bg" />-->
            <size android:height="60dp" android:width="60dp" />
        </shape>
    </item>
</selector>